NODE ?= 
SBC ?= 
OS ?= armbian-beta-bionic
SIZE ?= 1G
TARGET=../../target/

$(TARGET)/sbc-$(NODE)-$(SBC)-$(OS)-sdcard.img: $(TARGET)/$(SBC)-$(OS).tar.gz $(TARGET)/$(NODE).tar.gz
