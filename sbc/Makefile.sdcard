	vagrant ssh -- sudo make -C /srv/src/ -f /srv/src/Makefile.sdcard.vagrant /srv/target/$(notdir $@) NODE=$(NODE) SBC=$(SBC) OS=$(OS) SIZE=$(SIZE)
